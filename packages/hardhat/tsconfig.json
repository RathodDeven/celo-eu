{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist", // Output directory for all compiled files
    "rootDir": "./", // Root directory of input files
    "declaration": true, // Generate d.ts files
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "./scripts", // Include scripts directory
    "./test", // Include test directory
    "./ignition", // Include ignition directory
    "./hardhat.config.ts", // Include hardhat config
    "./types"
  ],
  "files": [
    "./hardhat.config.ts" // Explicitly include hardhat config
  ]
}
